{
  "name": "client-manager-pro",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "客户询盘管理系统 - 基于 Vue 3 + Supabase",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && node scripts/post-build.mjs",
    "build:deploy": "vite build && node scripts/post-build.mjs",
    "preview": "vite preview",
    "predeploy": "npm run build:deploy",
    "deploy": "gh-pages -d dist --dotfiles",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "@vicons/ionicons5": "^0.13.0",
    "@vueuse/core": "^10.7.2",
    "echarts": "^5.4.3",
    "naive-ui": "^2.37.3",
    "pinia": "^2.1.7",
    "terser": "^5.44.1",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.1",
    "gh-pages": "^6.1.1",
    "prettier": "^3.2.4",
    "typescript": "~5.3.3",
    "vite": "^5.0.12",
    "vue-tsc": "^1.8.27"
  },
  "homepage": "https://lize9791.github.io/Client-Manager-Pro"
}
